generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//userController.ts
model Usuario {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  Rol            Role[]
  Propietario    Propietario? @relation(fields: [Propietario_ID], references: [id])
  Propietario_ID Int?         @unique
  Tramitador     Tramitador?  @relation(fields: [Tramitador_ID], references: [id])
  Tramitador_ID  Int?         @unique
  Radicado       Radicado[]
}

//roleController.ts
model Role {
  id   Int    @id @default(autoincrement())
  tipo String

  Usuario Usuario[]
}

//processorController.ts
model Tramitador {
  id         Int    @id @default(autoincrement())
  nombres    String
  apellidos  String
  tipo_doc   String
  numero_doc String @unique
  email      String @unique
  telefono   String
  ciudad     String

  Usuario  Usuario?
  Radicado Radicado[]

}

//ownerController.ts
model Propietario {
  id           Int    @id @default(autoincrement())
  nombres      String
  apellidos    String
  tipo_doc     String
  numero_doc   String @unique
  email        String @unique
  telefono     String
  tipo_persona String @default("Natural")

  Usuario Usuario?
  predios Predio[]
}

//estateController.ts
model Predio {
  id                 Int     @id @default(autoincrement())
  codigoCatastral    String  @unique
  matricula          String? @unique
  via                String
  nro                String
  apen               String  @default("")
  cruce              String
  nro2               String
  apen2              String  @default("")
  placa              String?
  apartamento        String?
  urb_edif           String  @default("")
  estrato            String
  barrio             String
  comuna             String
  clasificacionSuelo String
  uso                String
  poligono           String
  zonaAvaluo         String

  propietarios Propietario[]
  Radicados    Radicado[]
}

//requestController.ts
model TipoSolicitud {
  id                  Int    @id @default(autoincrement())
  licencia            String
  tipo_licencia       String
  objetivo_tramite    String
  area_contruicda     String
  sistema_estructural String
  detalles_solicitud  String
  ponderate           String

  Radicado    Radicado? @relation(fields: [Radicado_ID], references: [id])
  Radicado_ID Int?
}

//settledController.ts
model Radicado {
  id            Int    @id @default(autoincrement())
  nro_radicado  String @unique
  cargo_fijo    Int
  cargo_varible Int?


  Predio         Predio          @relation(fields: [Predio_ID], references: [id])
  Predio_ID      Int
  Usuario        Usuario?        @relation(fields: [usuario_ID], references: [id])
  usuario_ID     Int?
  Tramitador     Tramitador?     @relation(fields: [Tramitador_ID], references: [id])
  Tramitador_ID  Int?
  Tipo_Solicitud TipoSolicitud[]
}
